
@{
    List<Empleado> empleados = Context.Session.GetObject<List<Empleado>>("EMPLEADOS");
}

<h1>Empleados Almacenados Session</h1>

<p>
    <a asp-controller="Empleados" asp-action="SessionEmpleados">Empleados session</a>
</p>

@if(empleados == null){
    <h2>No existen empleados en session</h2>
}else{

    <table class="table">
        <thead>
            <tr>
                <th>
                    IdEmpleado
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
                <th>
                    IdDepartamento
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in empleados)
            {
                <tr>
                    <td>
                        @emp.IdEmpleado
                    </td>
                    <td>
                        @emp.Apellido
                    </td>
                    <td>
                        @emp.Oficio
                    </td>
                    <td>
                        @emp.Salario
                    </td>
                    <td>
                        @emp.IdDepartamento

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
