@model List<Empleado>
<h1>Session Empleados OK</h1>

<p>
    <a asp-controller="Empleados" asp-action="EmpleadosAlmacenadosV4">Mostrar empleados almacenados</a>
</p>

<h3 style="color:lightgreen">@ViewData["MENSAJE"]</h3>

<ul class="list-group">
    @foreach (Empleado empleado in Model)
    {
        <li class="list-group-item list-group-item-dark">
            @empleado.Apellido
            <a asp-controller="Empleados" asp-action="SessionEmpleadosV4"
               asp-route-idempleado="@empleado.IdEmpleado">Almacenar empleado</a>
        </li>
    }
</ul>