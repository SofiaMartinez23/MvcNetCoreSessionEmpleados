@model List<Empleado>

<h1>Empleados Almacenados Session V5</h1>

<p>
    <a asp-controller="Empleados" asp-action="SessionEmpleadosV5">Empleados session OK</a>
</p>


@if (Model != null)
{
    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>IdEmpleado</th>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th>IdDepartamento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.IdEmpleado</td>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td>@emp.IdDepartamento</td>
                    <td>
                        <form asp-controller="Empleados" asp-action="EliminarEmpleadoDeSesion" method="post" style="display:inline;" class="eliminar-form">
                            <input type="hidden" name="idempleado" value="@emp.IdEmpleado" />
                            <button type="submit" class="btn btn-outline-light">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 style="color:lightgreen">@ViewData["MENSAJE"]</h3>

    <h3>No hay empleados almacenados en la sesión.</h3>
    <img src="https://cdn-icons-png.flaticon.com/512/678/678451.png" style="height:250px; width250px" />
}
